{
    "env": {
      "es6": true,
      "es2021": true,
      "node": true,
      "jest": true
    }, // ðŸ‘ˆ 1
    "extends": "eslint:recommended", // ðŸ‘ˆ 2
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    }, // ðŸ‘ˆ 3
    "plugins": ["import"], // ðŸ‘ˆ 4
    "rules": {
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "always"
        }
      ],
      "no-inner-declarations": "off",
      "indent": ["error", 2, {"SwitchCase": 1}],
      "quotes": ["error", "single"],
      "semi": ["error", "always"]
     
    }
  }
 